<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PythoPlus.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PythoPlus"
    Shell.FlyoutBehavior="Flyout"
    Title="PythoPlus">
    <Shell.FlyoutHeader>
        <StackLayout>
            <Label Text="Pytho Plus" FontSize="24" HorizontalOptions="Center" />
        </StackLayout>
    </Shell.FlyoutHeader>
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <MenuItem Text="Вийти з акаунту" IconImageSource="logout.png" Command="{Binding LogoutCommand}" />
</Shell>
